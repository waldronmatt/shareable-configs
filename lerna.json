{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org",
      "yes": true
    },
    "version": {
      "allowBranch": "main",
      "ignoreChanges": [
        "**/CHANGELOG.md",
        "**/node_modules/**",
        "**/package.json",
        "**/*.md"
      ],
      "yes": true
    }
  }
}
